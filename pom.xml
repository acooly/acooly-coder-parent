<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>acooly-module-coder</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>

	<name>acooly code generator</name>
	<url>http://www.feinno.com/framework/coder</url>

	<parent>
		<groupId>com.acooly</groupId>
		<artifactId>acooly-parent</artifactId>
		<version>2.0.0</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>com.acooly</groupId>
			<artifactId>acooly-core</artifactId>
			<version>2.0.0</version>
		</dependency>

		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.2</version>
		</dependency>

		<dependency>
			<groupId>commons-configuration</groupId>
			<artifactId>commons-configuration</artifactId>
			<version>1.9</version>
		</dependency>

		<!-- SWT custome dependency -->
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>swt</artifactId>
			<version>3.5.2-x86_64</version>
		</dependency>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.21</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>develop</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>deploy</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/resources</directory>
						<includes>
							<include>spring/**/*.xml</include>
							<include>template/**/*.ftl</include>
						</includes>
						<excludes>
							<exclude>*.properties</exclude>
						</excludes>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>com.acooly:acooly-module-coder</include>
									<!-- <include>commons-cli:commons-cli</include> <include>commons-dbcp:commons-dbcp</include> <include>commons-pool:commons-pool</include> <include>commons-io:commons-io</include> <include>org.apache.commons:commons-lang3</include> 
										<include>commons-logging:commons-logging</include> <include>log4j:log4j</include> <include>org.slf4j:slf4j-api</include> <include>org.slf4j:slf4j-log4j12</include> <include>org.springframework:*</include> 
										<include>com.acooly:acooly-core</include> <include>com.oracle:ojdbc14</include> <include>org.eclipse:swt</include> -->
								</includes>
							</artifactSet>
							<filters>
								<filter>
									<artifact>com.acooly:acooly-module-coder</artifact>
									<excludes>
										<exclude>*.properties</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<manifestEntries>
										<Main-Class>com.acooly.module.coder.ui.Generator</Main-Class>
									</manifestEntries>
								</transformer>
							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


</project>
